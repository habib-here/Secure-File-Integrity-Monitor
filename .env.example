# Server Configuration
PORT=3000
NODE_ENV=development

# Monitoring Configuration
# URL to monitor for new files (can be HTTP index page, directory listing, or API endpoint)
MONITOR_URL=https://example.com/files/
# Polling interval in milliseconds (default: 60000 = 1 minute)
POLL_INTERVAL=60000

# Download Configuration
# Directory to save downloaded files
DOWNLOAD_DIR=./downloads
# Maximum retry attempts for failed downloads
MAX_RETRIES=3
# Retry delay in milliseconds
RETRY_DELAY=5000
# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# Supported file extensions (comma-separated)
SUPPORTED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.webp,.pdf,.zip,.rar,.7z,.doc,.docx,.xls,.xlsx,.mp3,.mp4,.txt,.csv

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
